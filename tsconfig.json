{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "ESNext",
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
